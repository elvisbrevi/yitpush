<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Package as Tool -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>yitpush</ToolCommandName>

    <!-- Package Metadata -->
    <PackageId>YitPush</PackageId>
    <Version>1.1.0</Version>
    <Authors>Elvis Brevi</Authors>
    <Description>AI-powered git commit automation tool. Analyzes code changes with DeepSeek
      Reasoning AI and generates meaningful commit messages. Run 'yitpush' to automatically stage,
      commit, and push changes with intelligent commit messages.</Description>

    <!-- URLs and Repository -->
    <PackageProjectUrl>https://github.com/elvisbrevi/yitpush</PackageProjectUrl>
    <RepositoryUrl>https://github.com/elvisbrevi/yitpush</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Tags for discoverability -->
    <PackageTags>
      git;commit;ai;deepseek;automation;cli;tool;dotnet-tool;conventional-commits;reasoning;developer-tools</PackageTags>

    <!-- License -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- README -->
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Additional Metadata -->
    <Copyright>Copyright (c) 2026 Elvis Brevi</Copyright>
    <PackageReleaseNotes>New: PR description generator with --pr-description flag (interactive branch selection, AI-generated markdown)
      New: --save flag to optionally save output to markdown file (works with commit and PR description modes)
      New: Commit message display with panel border for better readability
      New: Branch list shows local/remote type and last modified date</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.54.0" />
  </ItemGroup>

</Project>