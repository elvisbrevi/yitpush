<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Package as Tool -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>yitpush</ToolCommandName>

    <!-- Package Metadata -->
    <PackageId>YitPush</PackageId>
    <Version>1.3.3</Version>
    <Authors>Elvis Brevi</Authors>
    <Description>AI-powered git commit automation tool. Analyzes code changes with DeepSeek
      Reasoning AI and generates meaningful commit messages. Run 'yitpush' to automatically stage,
      commit, and push changes with intelligent commit messages.</Description>

    <!-- URLs and Repository -->
    <PackageProjectUrl>https://github.com/elvisbrevi/yitpush</PackageProjectUrl>
    <RepositoryUrl>https://github.com/elvisbrevi/yitpush</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Tags for discoverability -->
    <PackageTags>
      git;commit;ai;deepseek;automation;cli;tool;dotnet-tool;conventional-commits;reasoning;developer-tools</PackageTags>

    <!-- License -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- README -->
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Additional Metadata -->
    <Copyright>Copyright (c) 2026 Elvis Brevi</Copyright>
    <PackageReleaseNotes>Breaking: CLI restructured to subcommand style (commit, checkout, pr,
      azure-devops)
      New: Running yitpush with no args shows help, like traditional CLI tools
      New: yitpush commit replaces the default flag-based commit flow
      New: yitpush checkout replaces --check flag
      New: yitpush pr replaces --pr-description flag
      Fix: Windows support for Azure CLI - automatically uses cmd.exe /c az to find az.cmd
      Fix: Azure DevOps organization fallback - prompts for manual entry when auto-detection fails</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.54.0" />
    <PackageReference Include="TextCopy" Version="6.2.1" />
  </ItemGroup>

</Project>